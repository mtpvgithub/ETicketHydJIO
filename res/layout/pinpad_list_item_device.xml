<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:background="@color/bg">

    <Button
        android:id="@+id/pp_btn_pair"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="Pair"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        style="@style/naviblue_custom_style" />
    
    <TextView
        android:id="@+id/pp_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/btn_pair"
        android:layout_toLeftOf="@+id/btn_pair"
        android:text="Galaxy Nexus"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="22sp" />
	
    <TextView
        android:id="@+id/pp_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_pair"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_pair"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" 
	    android:layout_marginLeft="10dp"/>
    
</RelativeLayout>