<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        style="@style/header_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/header_images_style_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/header_images_style_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView1"
            style="@style/header_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/header_txt" />
        
        <TextView
            android:id="@+id/textView2"
            style="@style/cust_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="@string/app_version"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_penchallandetails_header"
            style="@style/cust_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="@string/sub_header_txt"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/header_grnt_padding_ten" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_pdetails_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/tranparent_color"
                android:padding="@dimen/margin_fifteen" >

                <LinearLayout
                    android:id="@+id/ll_detailsresponsemain_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/regno" />

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tvregno_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ownername__pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_detailsresponsemain_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView8"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/eticket_no" />

                    <TextView
                        android:id="@+id/textView9"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tveticketno_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_addr_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_ownername__pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView10"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/offence_date" />

                    <TextView
                        android:id="@+id/textView11"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_offencedate_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_city_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_addr_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/offence_time" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_offencetime_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_makername_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_city_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/point_name" />

                    <TextView
                        android:id="@+id/textView15"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_pointname_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_makerclass_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_makername_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/ps_name" />

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_psname_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_color_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_makerclass_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView18"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/offence_desc" />

                    <TextView
                        android:id="@+id/textView19"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_offencedesc_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_engine_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_color_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten" >

                    <TextView
                        android:id="@+id/textView20"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/amnt" />

                    <TextView
                        android:id="@+id/textView21"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_amnt_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_chasis_pchallans_details_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_engine_pchallans_details_xml"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView22"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/chasos_no" />

                    <TextView
                        android:id="@+id/textView23"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_chasis_pchallans_details_xml"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgv_pchallans_details_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_pdetails_xml"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btn_ok_pchallans_details_xml"
                style="@style/naviblue_custom_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_pchallans_details_xml"
                android:layout_marginTop="@dimen/header_grnt_padding_ten"
                android:text="@string/ok" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>